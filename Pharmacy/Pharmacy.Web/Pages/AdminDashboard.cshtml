@page
@model Pharmacy.Web.Pages.AdminDashboardModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AdminDashboard";
}
@{
    Layout = "_AdminLayout";
}

<h2 class="text-center my-3">Добре дошли във вашата администраторска секция!</h2>

<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100 my-2">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-shopping-cart"></i>
                </div>
                @if (@Model.DashboardInfo.NumOfAllOrders != 1)
                {
                    <div class="mr-5">@Model.DashboardInfo.NumOfAllOrders поръчки до сега!</div>
                }
                else
                {
                    <div class="mr-5">@Model.DashboardInfo.NumOfAllOrders поръчкa до сега!</div>
                }
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-area="Admin" asp-controller="Orders" asp-action="All">
                <span class="float-left">Виж детайли</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100 my-2">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-user"></i>
                </div>
                @if (Model.DashboardInfo.NumOfUsers != 1)
                {
                    <div class="mr-5">@Model.DashboardInfo.NumOfUsers потребителя!</div>
                }
                else
                {
                    <div class="mr-5">@Model.DashboardInfo.NumOfUsers потребител!</div>
                }
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-area="Admin" asp-controller="Users" asp-action="Index">
                <span class="float-left">Виж детайли</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>

@model CartItemsViewModel
@{
    ViewData["Title"] = "Items";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Име на продукта</th>
            <th>Количество</th>
            <th>Цена за брой</th>
            <th>Общо</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
        <tr>
            <td><img style="height: 100px; width: 100px;" src="~/ProductsImages/@item.ImgName" /></td>
            <td>@item.Name</td>
            <td>@String.Format("{0:0.00}", item.Price)</td>
            <td>@item.Quantity</td>
            <td>@(String.Format("{0:0.00}", item.Price * item.Quantity))</td>
            <td><a href="/Shop/ShoppingCart/Remove/@item.ProductId"><i id="btnRemove" class="fa fa-times"></i></a></td>
        </tr>
        }
    </tbody>
</table>

<h3 class="text-right px-4">Обща сума: @String.Format("{0:0.00}", Model.AllMoney) лв</h3>

<form asp-area="Shop" asp-controller="ShoppingCart" asp-action="FinishOrder" method="post">
    <input type="submit" value="Завърши поръчката" class="btn btn-success my-3" style="margin-left: 85%" />
</form>
